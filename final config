# fluent-bit-config.yaml
apiVersion: v1
kind: ConfigMap
metadata:
  name: jpuv-fluentbit
  namespace: jpuv-system
data:
  # This filename key must be exactly 'fluent-bit.conf'
  fluent-bit.conf: |
    [SERVICE]
        Daemon Off
        Flush 5
        Log_Level info
        # Correctly configured HTTP server for health checks
        HTTP_Server On
        HTTP_Listen 0.0.0.0
        HTTP_Port 2020
        Health_Check On
        storage.path /var/log/fluent-bit/buffer
        storage.sync full
        storage.checksum On
        Parsers_File parsers.conf

    [INPUT]
        Name tail
        Tag kube.*
        Path /var/log/containers/*.log
        Mem_Buf_Limit 5MB
        Skip_Long_Lines On
        # Using a standard, reliable parser for container logs
        multiline.parser docker, cri

    [FILTER]
        Name kubernetes
        Match kube.*
        Kube_URL https://kubernetes.default.svc:443
        Merge_Log On

    [OUTPUT]
        Name opensearch
        Match kube.*
        # These values are correctly pulled from your secret
        Host        ${opensearch_host}
        HTTP_User   ${opensearch_user}
        HTTP_Passwd ${opensearch_passwd}
        Port 443
        Index jpuv-%Y.%m.%d
        Write_Operation create
        Suppress_Type_Name On
        tls On
        tls.verify off

    [OUTPUT]
        Name stdout
        Match *
